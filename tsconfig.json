{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "target": "es2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*", "./__tests__/**/*"]
}
